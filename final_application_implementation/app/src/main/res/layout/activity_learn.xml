<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnActivity"
    android:id="@+id/DrawerLayout_SideBar">



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".LearnActivity">

        <Button
            android:id="@+id/learn_basics_but"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="50dp"
            android:background="@drawable/rounded_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/basics"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/learn_classes_objects_but"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="40dp"
            android:background="@drawable/rounded_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/classes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/learn_basics_but" />

        <Button
            android:id="@+id/learn_functions_lambdas_but"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="50dp"
            android:background="@drawable/rounded_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/functions_lambdas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/learn_classes_objects_but" />

        <Button
            android:id="@+id/learn_mp_but"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="40dp"
            android:background="@drawable/rounded_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/mp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/learn_functions_lambdas_but" />

        <Button
            android:id="@+id/learn_others_but"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="50dp"
            android:background="@drawable/rounded_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/others"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/learn_mp_but" />


        </android.support.constraint.ConstraintLayout>


    </ScrollView>

        <android.support.design.widget.NavigationView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            app:menu="@menu/navigation_menu"
            android:layout_gravity="start">

        </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>